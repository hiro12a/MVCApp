@model Product
@{
    ViewData["Title"] = "ProductDetails";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center">Product Details</h1>
<hr />
<div class="container" style="width:80%;">
    <div class="md-4">
        <form>
            <div class="form-group mb-3">
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" disabled class="form-control"/>
                <input asp-for="ProductId" hidden class="form-control"/>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label"></label>
                <input asp-for="CategoryId" disabled class="form-control"/>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" disabled class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" disabled class="form-control" />
      
            </div>
            <div class="form-group mb-3">
                <label asp-for="QuantityAvailable" class="control-label"></label>
                <input asp-for="QuantityAvailable" disabled class="form-control" />
            </div>
            <div class="form-group mb-3">
                @Html.ActionLink("Edit", "EditProduct", new {ProductId = Model.ProductId, CategoryId = Model.CategoryId, 
                    Price = Model.Price, ProductName = Model.ProductName, QuantityAvailable = Model.QuantityAvailable},  new {@style = "width:150px", @class = "btn btn-primary"} )
                <a asp-controller="Product" asp-action="ViewProduct" class="btn btn-secondary" style="width:150px">Back to List</a>
            </div>
        </form>
    </div>
</div>
