@model Product
@{
    ViewData["Title"] = "DeleteProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center">Delete Product</h1>
<hr />
<div class="container" style="width:80%;">
    <div class="md-4">
        <form asp-action="SaveDeleteProduct" class="post" asp-route-id="@Model.ProductId">
            <div class="form-group mb-3">
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" disabled class="form-control"/>
                <input asp-for="ProductId" hidden class="form-control"/>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label"></label>
                <input asp-for="CategoryId" disabled class="form-control"/>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" disabled class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" disabled class="form-control" />
      
            </div>
            <div class="form-group mb-3">
                <label asp-for="QuantityAvailable" class="control-label"></label>
                <input asp-for="QuantityAvailable" disabled class="form-control" />
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Delete" class="btn btn-primary" style="width:150px" />
                <a asp-controller="Product" asp-action="ViewProduct" class="btn btn-secondary" style="width:150px">Back to List</a>
            </div>
        </form>
    </div>
</div>
